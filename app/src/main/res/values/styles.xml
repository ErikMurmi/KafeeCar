<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="entradas_texto">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0</item>
        <item name="android:background">@drawable/boton_redondeado</item>
        <item name="android:backgroundTint">#FFFFFF</item>
        <item name="android:ems">10</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="entradas_txt">
        <item name="android:padding">8dp</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0</item>
        <item name="android:background">@drawable/boton_redondeado</item>
        <item name="android:backgroundTint">#FFFFFF</item>
        <item name="android:ems">10</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Button.Black" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@android:color/black</item>
    </style>

    <style name="texto_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/text_space</item>
        <item name="android:fontFamily">@font/ocra</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="editar_entradas_txt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">33dp</item>
        <item name="android:layout_marginBottom">@dimen/edit_txt_espacio</item>
        <item name="android:background">@drawable/bordesboton</item>
        <item name="android:ems">10</item>
        <item name="android:fontFamily">@font/ocra</item>
        <item name="android:textSize">15sp</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Boton_buscar">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:background">@drawable/bordesboton</item>
        <item name="android:backgroundTint">@color/botones</item>
    </style>

    <style name="boton_listo">
        <item name="android:layout_width">135dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:background">@drawable/boton_redondeado</item>
        <item name="android:backgroundTint">#F7530C</item>
        <item name="android:fontFamily">@font/valorant</item>
        <item name="android:insetLeft">5dp</item>
        <item name="android:insetTop">5dp</item>
        <item name="android:insetRight">5dp</item>
        <item name="android:insetBottom">5dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="boton_editar">
        <item name="android:layout_width">47dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/boton_redondeado</item>
        <item name="android:fontFamily">@font/valorant</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="animacion">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
</resources>