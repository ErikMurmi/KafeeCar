<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="entradas_texto">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0</item>
        <item name="android:background">@drawable/boton_redondeado</item>
        <item name="android:backgroundTint">#FFFFFF</item>
        <item name="android:ems">10</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="entradas_txt">
        <item name="android:padding">8dp</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0</item>
        <item name="android:background">@drawable/boton_redondeado</item>
        <item name="android:backgroundTint">#FFFFFF</item>
        <item name="android:ems">10</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Button.Black" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@android:color/black</item>
    </style>

    <style name="texto_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/text_space</item>
        <item name="android:fontFamily">@font/ocra</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="editar_entradas_txt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">33dp</item>
        <item name="android:layout_marginBottom">@dimen/edit_txt_espacio</item>
        <item name="android:background">@drawable/bordesboton</item>
        <item name="android:ems">10</item>
        <item name="android:fontFamily">@font/ocra</item>
        <item name="android:textSize">15sp</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:textAlignment">center</item>
    </style>
</resources>