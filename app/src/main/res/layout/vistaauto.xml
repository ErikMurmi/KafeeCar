<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/plantilla"
    tools:context=".Patioventainterfaz">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="703dp">

        <FrameLayout
            android:layout_width="412dp"
            android:layout_height="296dp"
            android:layout_marginLeft="5dp">

            <Button
                android:id="@+id/aniadir_favorito_btn"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginTop="205dp"
                android:background="@android:drawable/star_big_on"
                android:fontFamily="@font/ocraext"
                app:showAsAction="always" />

            <ImageView
                android:id="@+id/foto_auto_imageView"
                android:layout_width="411dp"
                android:layout_height="307dp"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />

            <EditText
                android:id="@+id/titulo_auto_txt"
                android:layout_width="425dp"
                android:layout_height="76dp"
                android:background="@android:color/background_dark"
                android:backgroundTint="?attr/colorControlNormal"
                android:ems="10"
                android:fontFamily="@font/ocraext"
                android:inputType="textPersonName"
                android:text="Chevrolet Semi-nuevo"
                android:textAlignment="textStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@android:color/background_light"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/precio_auto_txt"
                android:layout_width="423dp"
                android:layout_height="54dp"
                android:layout_marginTop="240dp"
                android:background="@android:color/background_dark"
                android:backgroundTint="?attr/colorControlNormal"
                android:ems="10"
                android:fontFamily="@font/ocraext"
                android:inputType="textPersonName"
                android:text=" $5000   "
                android:textAlignment="textEnd"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@android:color/background_light"
                android:textSize="30sp" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="412dp"
            android:layout_height="369dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="15dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/agendarcita_btn"
                android:layout_width="59dp"
                android:layout_height="52dp"
                android:layout_marginStart="320dp"
                android:layout_marginTop="7dp"
                android:background="?attr/actionModePasteDrawable"
                android:fontFamily="@font/ocraext"
                android:text="+"
                android:textAlignment="center"
                android:textColor="@android:color/darker_gray"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/detalleauto_txt"
                android:layout_width="369dp"
                android:layout_height="282dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bordesbotongris"
                android:ems="10"
                android:fontFamily="@font/ocraext"
                android:inputType="textPersonName" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>