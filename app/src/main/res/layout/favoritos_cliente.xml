                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginTop="205dp"
                    android:background="@android:drawable/star_big_on"
                    android:fontFamily="@font/ocraext"
                    app:showAsAction="always" />

                <ImageView
                    android:id="@+id/foto_auto_F_imageView"
                    android:layout_width="411dp"
                    android:layout_height="307dp"
                    tools:srcCompat="@tools:sample/backgrounds/scenic" />

                <TextView
                    android:id="@+id/titulo_auto_F_txt"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@android:color/background_dark"
                    android:backgroundTint="?attr/colorControlNormal"
                    android:fontFamily="@font/ocraext"
                    android:gravity="center|center_horizontal"
                    android:text="Chevrolet Semi-nuevo"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/precio_auto_F_txt"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:layout_marginTop="240dp"
                    android:background="@android:color/background_dark"
                    android:backgroundTint="?attr/colorControlNormal"
                    android:ems="10"
                    android:fontFamily="@font/ocraext"
                    android:gravity="right|center_vertical"
                    android:paddingEnd="20dp"
                    android:text=" $5000   "
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@android:color/background_light"
                    android:textSize="30sp" />
            </FrameLayout>

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/bordesmarcosnegro"
                    android:orientation="vertical">

                    <LinearLayout
