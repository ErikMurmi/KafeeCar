<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foregroundGravity="center"
    app:layout_anchorGravity="center">

    <LinearLayout
        android:id="@+id/visualizar_cliente_lyt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/perfilcliente"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imagen_perfil_cliente_img"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_marginLeft="122dp"
            android:layout_marginTop="80dp"
            android:adjustViewBounds="false"
            tools:srcCompat="@tools:sample/avatars" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="343dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/bordesmarcos"
            android:orientation="vertical">

            <TextView
                android:id="@+id/datos_personales_cliente_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/monglos"
                android:text="DATOS PERSONALES"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/ver_nombre_cliente_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ocra"
                        android:text="Nombre: "
                        android:textColor="#686363"
                        android:textSize="21sp" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="6dp" />

                    <TextView
                        android:id="@+id/nombre_cliente_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/ocraext"
                        android:hint="Martha"
                        android:textColor="#000000"
                        android:textSize="21sp" />

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/ver_fecha_nacimiento_cliente_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginBottom="3dp"
                        android:fontFamily="@font/ocraext"
                        android:text="Fecha de nacimiento: "
                        android:textColor="#686363"
                        android:textSize="21sp" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="6dp" />

                    <TextView
                        android:id="@+id/fecha_nacimiento_cliente_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/ocraext"
                        android:hint="27/09/1987"
                        android:textColor="#000000"
                        android:textSize="19sp" />

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/ver_cédula_cliente_txt"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/ocraext"
                        android:text="Cédula:"
                        android:textColor="#686363"
                        android:textSize="19sp" />

                    <TextView
                        android:id="@+id/cedula_cliente_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/ocraext"
                        android:hint="9999999999"
                        android:textColor="#000000"
                        android:textSize="19sp" />

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/ver_telefono_cliente_txt"
                        android:layout_width="112dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/ocraext"
                        android:text="Teléfono:"
                        android:textColor="#686363"
                        android:textSize="19sp" />

                    <TextView
                        android:id="@+id/telefono_cliente_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ocraext"
                        android:hint="02 366 366"
                        android:textColor="#000000"
                        android:textSize="19sp" />
                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/ver_correo_cliente_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginBottom="3dp"
                        android:fontFamily="@font/ocraext"
                        android:text="Correo:"
                        android:textColor="#686363"
                        android:textSize="19sp" />

                    <TextView
                        android:id="@+id/correo_cliente_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/ocraext"
                        android:hint="m.perez@gmail.com"
                        android:textColor="#000000"
                        android:textSize="19sp" />
                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="11dp" />

            </LinearLayout>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="55dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/deshabilitar_vendedor_btn"
                android:layout_width="114dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/boton_redondeado_dark"
                android:drawableLeft="@android:drawable/stat_sys_warning"
                android:fontFamily="@font/valorant"
                android:paddingStart="8dp"
                android:text="Deshabilitar"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <Space
                android:layout_width="30dp"
                android:layout_height="10dp" />

            <Button
                android:id="@+id/editar_vendedor_btn"
                style="@style/boton_editar"
                android:text="Editar" />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>