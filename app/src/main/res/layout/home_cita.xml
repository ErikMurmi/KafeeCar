<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <ScrollView
            android:id="@+id/ver_cita_Scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            tools:visibility="invisible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="visible"
                    tools:visibility="visible">

                    <TextView
                        android:id="@+id/VerCitaCL_textView"
                        android:layout_width="190dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="136dp"
                        android:layout_marginTop="39dp"
                        android:layout_marginEnd="136dp"
                        android:fontFamily="@font/ocraext"
                        android:text="Ver Cita"
                        android:textColor="@android:color/background_dark"
                        android:textSize="30sp" />

                    <ImageView
                        android:id="@+id/imagenauto2"
                        android:layout_width="262dp"
                        android:layout_height="159dp"
                        android:layout_marginStart="70dp"
                        android:layout_marginTop="15dp"
                        tools:srcCompat="@tools:sample/backgrounds/scenic" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/Fecha_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_marginLeft="40dp"
                            android:fontFamily="@font/ocraext"
                            android:text="Fecha:"
                            android:textColor="#111111"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/fecha_txt3"
                            android:layout_width="37dp"
                            android:layout_height="28dp"
                            android:layout_marginLeft="100dp"
                            android:layout_marginTop="2dp"
                            android:background="@drawable/bordesbotongris"
                            android:ems="10"
                            android:fontFamily="@font/ocraext"
                            android:inputType="textPersonName"
                            android:textAlignment="textStart"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/fecha_txt2"
                            android:layout_width="36dp"
                            android:layout_height="28dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="2dp"
                            android:background="@drawable/bordesbotongris"
                            android:ems="10"
                            android:fontFamily="@font/ocraext"
                            android:inputType="textPersonName"
                            android:textAlignment="textStart"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/fecha_txt"
                            android:layout_width="37dp"
                            android:layout_height="29dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="2dp"
                            android:background="@drawable/bordesbotongris"
                            android:ems="10"
                            android:fontFamily="@font/ocraext"
                            android:inputType="textPersonName"
                            android:textAlignment="textStart"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/nuevaFecha_textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:fontFamily="@font/ocraext"
                            android:text="Hora:"
                            android:textColor="#111111"
                            android:textSize="20sp" />

                        <EditText
                            android:layout_width="151dp"
                            android:layout_height="28dp"
                            android:layout_marginLeft="115dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/bordesbotongris"
                            android:ems="10"
                            android:fontFamily="@font/ocraext"
                            android:inputType="textPersonName"
                            android:textAlignment="textStart"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="37dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/vendedor_textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:fontFamily="@font/ocraext"
                            android:text="Vendedor:"
                            android:textColor="#111111"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/vendedor_txt"
                            android:layout_width="151dp"
                            android:layout_height="28dp"
                            android:layout_marginStart="65dp"
                            android:layout_marginLeft="3dp"
                            android:background="@drawable/bordesbotongris"
                            android:ems="10"
                            android:fontFamily="@font/ocraext"
                            android:inputType="textPersonName"
                            android:textAlignment="textStart"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="37dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/descripcion_textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:fontFamily="@font/ocraext"
                            android:text="Descripción:"
                            android:textColor="#111111"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/descripcion_txt"
                            android:layout_width="151dp"
                            android:layout_height="28dp"
                            android:layout_marginLeft="30dp"
                            android:background="@drawable/bordesbotongris"
                            android:ems="10"
                            android:fontFamily="@font/ocraext"
                            android:inputType="textPersonName"
                            android:textAlignment="textStart"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/vehiculopalabra_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/ocraext"
                        android:text="Vehículo:"
                        android:textColor="#111111"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/vehiculo_txt"
                        android:layout_width="373dp"
                        android:layout_height="139dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/bordesbotongris"
                        android:ems="10"
                        android:fontFamily="@font/ocraext"
                        android:inputType="textPersonName"
                        android:textAlignment="textStart"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/descartar_btn"
                            android:layout_width="128dp"
                            android:layout_height="33dp"
                            android:layout_marginLeft="50dp"
                            android:background="@drawable/bordesbotongris"
                            android:backgroundTint="#111111"
                            android:fontFamily="@font/ocraext"
                            android:text="Anular"
                            android:textColor="@android:color/background_light"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/actualizar_btn"
                            android:layout_width="128dp"
                            android:layout_height="33dp"
                            android:layout_marginLeft="30dp"
                            android:background="@drawable/bordesbotongris"
                            android:backgroundTint="#F7530C"
                            android:fontFamily="@font/ocraext"
                            android:text="Actualizar"
                            android:textSize="18sp" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/editar_cita_linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="gone">

            <TextView
                android:id="@+id/EditarCita_textView"
                android:layout_width="213dp"
                android:layout_height="42dp"
                android:layout_marginStart="136dp"
                android:layout_marginTop="60dp"
                android:layout_marginEnd="136dp"
                android:fontFamily="@font/ocraext"
                android:text="Editar Cita"
                android:textColor="@android:color/background_dark"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/NuevaFecha_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="90dp"
                android:fontFamily="@font/ocraext"
                android:text="Nueva  Fecha"
                android:textColor="#111111"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="394dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/dia_etxt"
                    android:layout_width="50dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/bordesbotongris"
                    android:ems="10"
                    android:fontFamily="@font/ocraext"
                    android:inputType="textPersonName"
                    android:lineSpacingExtra="0sp"
                    android:text="dd"
                    android:textAlignment="center"
                    android:textDirection="anyRtl"
                    android:textSize="20sp"
                    android:typeface="normal" />

                <EditText
                    android:id="@+id/mes_txt"
                    android:layout_width="50dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/bordesbotongris"
                    android:ems="10"
                    android:fontFamily="@font/ocraext"
                    android:inputType="textPersonName"
                    android:text="mm"
                    android:textAlignment="center"
                    android:textDirection="anyRtl"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/anio_txt"
                    android:layout_width="50dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/bordesbotongris"
                    android:ems="10"
                    android:fontFamily="@font/ocraext"
                    android:inputType="textPersonName"
                    android:text="aa"
                    android:textAlignment="center"
                    android:textDirection="anyRtl"
                    android:textSize="20sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/NuevaHora_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/ocraext"
                android:text="Nueva hora "
                android:textColor="#111111"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="395dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/minutos_etxt"
                    android:layout_width="50dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bordesbotongris"
                    android:ems="10"
                    android:fontFamily="@font/ocraext"
                    android:inputType="textPersonName"
                    android:text="00"
                    android:textAlignment="center"
                    android:textDirection="anyRtl"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/dospuntos_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/ocraext"
                    android:text=":"
                    android:textColor="#111111"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/horaeditarcita_txt"
                    android:layout_width="50dp"
                    android:layout_height="34dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bordesbotongris"
                    android:ems="10"
                    android:fontFamily="@font/ocraext"
                    android:inputType="textPersonName"
                    android:text="00"
                    android:textAlignment="center"
                    android:textDirection="anyRtl"
                    android:textSize="20sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/PlacaV_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/ocraext"
                android:text="Placa del vehiculo"
                android:textColor="#111111"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/placa_etxt"
                android:layout_width="280dp"
                android:layout_height="34dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bordesbotongris"
                android:ems="10"
                android:fontFamily="@font/ocraext"
                android:inputType="textPersonName"
                android:textAlignment="textStart"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button4"
                android:layout_width="121dp"
                android:layout_height="34dp"
                android:layout_marginLeft="190dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/bordesbotongris"
                android:backgroundTint="#F7530C"
                android:fontFamily="@font/valoran"
                android:text="Guardar"
                android:textSize="18sp" />

        </LinearLayout>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>