<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vehiculo_lista_lyt"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/item_lista_espacio"
    app:cardCornerRadius="15dp">

    <LinearLayout
        android:id="@+id/AVvendedor_lyt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bordesmarcosnegro"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/AVimagenPerfil1_img"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                tools:srcCompat="@tools:sample/avatars" />

            <Space
                android:layout_width="17dp"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="193dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/AVnombre_txt"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="13dp"
                    android:fontFamily="@font/ocraext"
                    android:hint="Martha PÃ©rez"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="21sp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/AVentrada_txt"
                        android:layout_width="95dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ocraext"
                        android:text="Entrada:"
                        android:textColor="@color/gris_visualizar"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/AVhoraEntrada_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ocraext"
                        android:hint="8:00 am"
                        android:textColor="#000000"
                        android:textSize="17sp" />
                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="4dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/AValmuerzo_txt"
                        android:layout_width="106dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ocraext"
                        android:text="Almuerzo:"
                        android:textColor="@color/gris_visualizar"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/AVhoraAlmuerzo_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ocraext"
                        android:hint="13:00 pm"
                        android:textColor="#000000"
                        android:textSize="17sp" />
                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="4dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/AVsalida_txt"
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ocraext"
                        android:text="Salida:"
                        android:textColor="@color/gris_visualizar"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/AVhoraSalida_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ocraext"
                        android:hint="17:00 pm"
                        android:textColor="#000000"
                        android:textSize="17sp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>