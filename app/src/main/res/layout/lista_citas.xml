<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/plantilla_citas">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginTop="45dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dia_listacita_txt"
                    android:layout_width="19dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/ocra"
                    android:text="Día"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/día_listacita.btn"
                    android:layout_width="5dp"
                    android:layout_height="21dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bordesboton"
                    android:backgroundTint="@color/browser_actions_text_color"
                    android:text="Button" />

                <TextView
                    android:id="@+id/mes_listacita_txt"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/ocra"
                    android:text="Mes"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/mes_listacita_btn"
                    android:layout_width="5dp"
                    android:layout_height="21dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bordesboton"
                    android:text="Button" />

                <TextView
                    android:id="@+id/anio_listacita_txt"
                    android:layout_width="18dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/ocra"
                    android:text="Año"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/anio_listacita_btn"
                    android:layout_width="5dp"
                    android:layout_height="21dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bordesboton"
                    android:text="Button" />

                <TextView
                    android:id="@+id/hora_listacita_txt"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/ocra"
                    android:text="Hora"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/hora_listacita_btn"
                    android:layout_width="5dp"
                    android:layout_height="21dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="45dp"
                    android:layout_weight="1"
                    android:background="@drawable/bordesboton"
                    android:text="Button" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="83dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/dd_txt"
                        android:layout_width="28dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35dp"
                        android:fontFamily="@font/ocraext"
                        android:text="dd"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/dd_etxt"
                        android:layout_width="46dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="22dp"
                        android:background="@drawable/bordesboton"
                        android:ems="10"
                        android:fontFamily="@font/ocraext"
                        android:inputType="textPersonName"
                        android:text="12"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="62dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/mm_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/ocraext"
                        android:text="mm"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/mm_etxt"
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bordesboton"
                        android:ems="10"
                        android:fontFamily="@font/ocraext"
                        android:inputType="textPersonName"
                        android:text="01"
                        android:textAlignment="center"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="68dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/yyy_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ocraext"
                        android:text="yyy"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/yyy_etxt"
                        android:layout_width="52dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bordesboton"
                        android:ems="10"
                        android:fontFamily="@font/ocraext"
                        android:inputType="textPersonName"
                        android:text="2021"
                        android:textAlignment="center"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="73dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/hora_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ocraext"
                        android:text="Hora"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/hora_listacita_etxt"
                        android:layout_width="49dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bordesboton"
                        android:ems="10"
                        android:fontFamily="@font/ocraext"
                        android:inputType="textPersonName"
                        android:text="17"
                        android:textAlignment="center"
                        android:textSize="14sp" />

                </LinearLayout>

                <Button
                    android:id="@+id/buscar_listacita_btn"
                    android:layout_width="118dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/boton_redondeado"
                    android:drawableStart="@drawable/icono_busqueda"
                    android:fontFamily="@font/valorant"
                    android:paddingStart="10dp"
                    android:text="BUSCAR"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/Info_listacita_layout"
                android:layout_width="395dp"
                android:layout_height="138dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/bordesbotongris"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/auto_imgView"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    tools:srcCompat="@tools:sample/backgrounds/scenic" />

                <LinearLayout
                    android:layout_width="216dp"
                    android:layout_height="125dp"
                    android:foregroundGravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/hora_lista_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ocraext"
                        android:text="8:00 AM-9:00 AM"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/cliente_listacita_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/ocraext"
                        android:text="Cliente: María Perez"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/telefono_listacita_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/ocraext"
                        android:text="Teléfono: 0998877665"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/matricula_listacita_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/ocraext"
                        android:text="Matricula: PCQ 1298"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/info_lista2_layaout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/bordesbotongris"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/auto2_imgView"
                    android:layout_width="159dp"
                    android:layout_height="119dp"
                    tools:srcCompat="@tools:sample/backgrounds/scenic" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/hora_lista2_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/ocraext"
                        android:text="10:00 AM- 11:00 AM"
                        android:textAlignment="center"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/clente_listacita2_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/ocraext"
                        android:text="Cliente: Francisco Ortega"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/telefono_listacita2_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/ocraext"
                        android:text="Teléfono 0991234560"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/matricula_licencia2_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/ocraext"
                        android:text="Matricula: PDF 1234"
                        android:textColor="@color/black" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/aniadir_cita_btn"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="340dp"
                android:layout_marginTop="340dp"
                android:background="@drawable/anadir_icon" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>