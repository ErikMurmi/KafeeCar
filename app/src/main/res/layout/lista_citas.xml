<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/plantilla_citas">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="83dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/dd_txt"
                        android:layout_width="28dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35dp"
                        android:fontFamily="@font/ocraext"
                        android:text="dd"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/dd_etxt"
                        android:layout_width="46dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="22dp"
                        android:background="@drawable/bordesboton"
                        android:ems="10"
                        android:fontFamily="@font/ocraext"
                        android:inputType="textPersonName"
                        android:text="12"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="62dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/mm_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/ocraext"
                        android:text="mm"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/mm_etxt"
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bordesboton"
                        android:ems="10"
                        android:fontFamily="@font/ocraext"
                        android:inputType="textPersonName"
                        android:text="01"
                        android:textAlignment="center"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="68dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/yyy_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ocraext"
                        android:text="yyy"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/yyy_etxt"
                        android:layout_width="52dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bordesboton"
                        android:ems="10"
                        android:fontFamily="@font/ocraext"
                        android:inputType="textPersonName"
                        android:text="2021"
                        android:textAlignment="center"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="73dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/hora_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ocraext"
                        android:text="Hora"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/hora_listacita_etxt"
                        android:layout_width="49dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bordesboton"
                        android:ems="10"
                        android:fontFamily="@font/ocraext"
                        android:inputType="textPersonName"
                        android:text="17"
                        android:textAlignment="center"
                        android:textSize="14sp" />

                </LinearLayout>

                <Button
                    android:id="@+id/buscar_listacita_btn"
                    android:layout_width="118dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/boton_redondeado"
                    android:drawableStart="@drawable/icono_busqueda"
                    android:fontFamily="@font/valorant"
                    android:paddingStart="10dp"
                    android:text="BUSCAR"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/listacitas_Rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>