<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="395dp"
    android:layout_height="180dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="15dp"
        android:background="@drawable/bordesmarcosnegro"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imagen_cita_cliente_img"
            android:layout_width="173dp"
            android:layout_height="127dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="6dp"
            app:srcCompat="@mipmap/ic_tesla" />

        <LinearLayout
            android:layout_width="215dp"
            android:layout_height="136dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/hora_cita_cliente_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ocraext"
                android:text="8:00 AM-9:00 AM"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/nombre_cita_cliente_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/ocraext"
                android:text="Cliente: María Perez"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/telefono_cita_cliente_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/ocraext"
                android:text="Teléfono: 0998877665"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/matricula_cita_cliente_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/ocraext"
                android:text="Matricula: PCQ 1298"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>