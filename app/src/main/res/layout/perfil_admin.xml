<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/perfil_back"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="80dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="50dp"
            android:fadeScrollbars="true"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="match_parent"
                    android:layout_height="179dp"
                    tools:srcCompat="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/nombreVendedor_txt2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:fontFamily="@font/ocra"
                    android:paddingBottom="@dimen/espacios"
                    android:text="Nombre"
                    android:textColor="#959898"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/nombreVendedor_etxt2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bordesbotongris"
                    android:ems="10"
                    android:fontFamily="@font/ocra"
                    android:inputType="textPersonName" />

                <TextView
                    android:id="@+id/apellidoVendedor_txt2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/ocra"
                    android:paddingBottom="@dimen/espacios"
                    android:text="Apellido"
                    android:textColor="#959898"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/apellidoVendedor_etxt2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bordesbotongris"
                    android:ems="10"
                    android:fontFamily="@font/ocra"
                    android:inputType="textPersonName" />

                <TextView
                    android:id="@+id/cedulaVendedor_txt2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/ocra"
                    android:paddingBottom="@dimen/espacios"
                    android:text="Cédula"
                    android:textColor="#959898"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/cedulaVendedor_etxt2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bordesbotongris"
                    android:ems="10"
                    android:fontFamily="@font/ocra"
                    android:inputType="numberSigned"
                    android:textColor="#959898" />

                <TextView
                    android:id="@+id/fechaNacimientoVendedor_txt2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="@dimen/edit_txt_espacio"
                    android:fontFamily="@font/ocra"
                    android:paddingBottom="@dimen/espacios"
                    android:text="Fecha de Nacimiento"
                    android:textColor="#959898"
                    android:textSize="17sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/diaNacimientoVendedor_etxt"
                        android:layout_width="101dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="7dp"
                        android:background="@drawable/bordesbotongris"
                        android:ems="10"
                        android:fontFamily="@font/ocra"
                        android:inputType="date"
                        android:textColor="@color/gris" />

                    <EditText
                        android:id="@+id/mesNacimientoVendedor_etxt"
                        android:layout_width="102dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="7dp"
                        android:background="@drawable/bordesbotongris"
                        android:ems="10"
                        android:fontFamily="@font/ocra"
                        android:inputType="date"
                        android:textColor="@color/gris" />

                    <EditText
                        android:id="@+id/anioNacimientoVendedor_etxt"
                        android:layout_width="127dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bordesbotongris"
                        android:ems="10"
                        android:fontFamily="@font/ocra"
                        android:inputType="date"
                        android:textColor="@color/gris" />
                </LinearLayout>

                <TextView
                    android:id="@+id/telefonoVendedor_txt2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/ocra"
                    android:paddingBottom="@dimen/espacios"
                    android:text="Teléfono"
                    android:textColor="#959898"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/telefonoVendedor_etxt2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bordesbotongris"
                    android:ems="10"
                    android:fontFamily="@font/ocra"
                    android:inputType="numberSigned"
                    android:textColor="#959898" />

                <TextView
                    android:id="@+id/correoVendedor_txt2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/ocra"
                    android:paddingBottom="@dimen/espacios"
                    android:text="Correo"
                    android:textColor="#959898"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/correoVendedor_etxt2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bordesbotongris"
                    android:ems="10"
                    android:fontFamily="@font/ocra"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/gris" />

                <TextView
                    android:id="@+id/contraseniaVendedor_txt2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/ocra"
                    android:paddingBottom="@dimen/espacios"
                    android:text="Contraseña"
                    android:textColor="#959898"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/contraseniaVendedor_etxt2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bordesbotongris"
                    android:ems="10"
                    android:fontFamily="@font/ocra"
                    android:inputType="textPassword"
                    android:textColor="@color/gris" />

                <TextView
                    android:id="@+id/confirmarContraseniaVendedor_txt2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/ocra"
                    android:paddingBottom="@dimen/espacios"
                    android:text="Confirmar Contraseña"
                    android:textColor="#959898"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/confirmarContraseniaVendedor_etxt2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bordesbotongris"
                    android:ems="10"
                    android:fontFamily="@font/ocra"
                    android:inputType="textPassword"
                    android:textColor="@color/gris" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/salir_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/boton_redondeado"
            android:fontFamily="@font/valorant"
            android:onClick="salir"
            android:text="Salir"
            android:textColor="@color/white" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>