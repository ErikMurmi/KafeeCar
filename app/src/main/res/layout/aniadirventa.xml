<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/aniadir_venta "
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/anadir_venta">

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="634dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="24dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="183dp"
            android:layout_height="179dp"
            android:layout_gravity="center_horizontal|center_vertical"
            app:srcCompat="@mipmap/ic_tesla" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fechaVenta.title"
                android:layout_width="280dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:fontFamily="@font/ocraext"
                android:text="Fecha de Venta"
                android:textAlignment="center"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/HoraCita.title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ocra"
                android:text="Hora"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/fechacitames_txt"
                android:layout_width="70dp"
                android:layout_height="42dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/bordesboton"
                android:ems="10"
                android:fontFamily="@font/ocra"

                android:inputType="textPersonName"
                android:textColor="#CEC9D5" />

            <EditText
                android:id="@+id/fechacitadia_txt"
                android:layout_width="70dp"
                android:layout_height="42dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/bordesboton"
                android:ems="10"
                android:fontFamily="@font/ocra"
                android:inputType="textPersonName"
                android:textColor="#CEC9D5" />

            <EditText
                android:id="@+id/fechacitaanio_txt"
                android:layout_width="70dp"
                android:layout_height="42dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/bordesboton"
                android:ems="10"
                android:fontFamily="@font/ocra"

                android:inputType="textPersonName"
                android:textColor="#CEC9D5" />

            <EditText
                android:id="@+id/fechacitahoracita_txt"
                android:layout_width="70dp"
                android:layout_height="42dp"
                android:background="@drawable/bordesboton"
                android:ems="10"
                android:fontFamily="@font/ocra"
                android:inputType="textPersonName"

                android:textColor="#CEC9D5" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/precio.title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ocra"
                android:text="Precio"
                android:textAlignment="textStart"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/precio.txt"
                android:layout_width="264dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bordesboton"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/cliente.title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ocraext"
                android:text="Cliente"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/cliente.txt"
                android:layout_width="265dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bordesboton"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/vendedor.title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ocraext"
                android:text="Vendedor"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/vendedor.txt"
                android:layout_width="272dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bordesboton"
                android:ems="10"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/descartarVenta.btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/boton_redondeado_dark"
                android:fontFamily="@font/valorant"
                android:text="Descartar"
                android:textColor="#FFFFFF" />

            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/aniadirVenta.btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/boton_redondeado"
                android:fontFamily="@font/valorant"
                android:text="AÃ±adir" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>