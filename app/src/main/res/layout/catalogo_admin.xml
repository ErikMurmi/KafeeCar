<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Patioventainterfaz">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/aniadir_vehiculo_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:clickable="true"
        android:visibility="visible"
        app:backgroundTint="@color/botones"
        app:borderWidth="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:maxImageSize="50dp"
        app:srcCompat="@drawable/anadir_icon" />

    <ScrollView
        android:id="@+id/vehiculo_admin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/v_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="40dp"
            android:paddingRight="20dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/auto_titulo_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/ocra"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="34sp"
                tools:text="CyberTruck" />

            <ImageView
                android:id="@+id/vehiculo_img"
                android:layout_width="match_parent"
                android:layout_height="194dp"
                app:srcCompat="@mipmap/ic_tesla_round" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="13dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bordesmarcos"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/placa_txt"
                    style="@style/texto_style"
                    android:fontFamily="@font/ocra"
                    android:text="Placa: "
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/matricula_txt"
                    style="@style/texto_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/text_space"
                    android:fontFamily="@font/ocra"
                    android:text="Matricula: " />

                <TextView
                    android:id="@+id/vehiculo_anio_txt"
                    style="@style/texto_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/text_space"
                    android:fontFamily="@font/ocra"
                    android:text="Año: " />

                <TextView
                    android:id="@+id/vehiculo_marca_txt"
                    style="@style/texto_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/text_space"
                    android:fontFamily="@font/ocra"
                    android:text="Marca:" />

                <TextView
                    android:id="@+id/vehiculo_modelo_txt"
                    style="@style/texto_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/text_space"
                    android:fontFamily="@font/ocra"
                    android:text="Modelo: " />

                <TextView
                    android:id="@+id/vehiculo_color_txt"
                    style="@style/texto_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/text_space"
                    android:fontFamily="@font/ocra"
                    android:text="Color: " />

                <TextView
                    android:id="@+id/vehiculo_descripcion_txt"
                    style="@style/texto_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/ocra"
                    android:text="Descripción:" />

                <TextView
                    android:id="@+id/vehiculo_pinicial_txt"
                    style="@style/texto_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/text_space"
                    android:fontFamily="@font/ocra"
                    android:text="Precio inicial: " />

                <TextView
                    android:id="@+id/vehiculo_pventa_txt"
                    style="@style/texto_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ocra"
                    android:text="Precio venta:" />

                <TextView
                    android:id="@+id/vehiculo_promocion_txt"
                    style="@style/texto_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ocra"
                    android:text="Promoción: " />

                <TextView
                    android:id="@+id/vehiculo_matriculado_txt"
                    style="@style/texto_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ocra"
                    android:text="Matriculado: " />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="13dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/eliminar_vehiculo_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/boton_redondeado_dark"
                    android:fontFamily="@font/valoran"
                    android:text="Anular"
                    android:textColor="@color/white" />

                <Space
                    android:layout_width="22dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/editar_vehiculo_btn"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/boton_redondeado"
                    android:fontFamily="@font/valoran"
                    android:onClick="visualizarVehiculo"
                    android:text="editar"
                    android:textColor="@color/white" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/vehiculos_admin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/catalogo"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="visible">

        <Button
            android:id="@+id/ir_editar_vehiculo"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:background="@drawable/boton_redondeado"
            android:fontFamily="@font/valorant"
            android:text="Editar Auto"
            android:textColor="@color/white" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/editar_vehiculo_lyt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cita_individual_editar"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="80dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ocra"
                            android:text="@string/placa_c"
                            android:textColor="#000000" />

                        <EditText
                            android:id="@+id/editTextTextPersonName4"
                            style="@style/editar_entradas_txt"
                            android:layout_height="35dp"
                            android:textSize="15sp"
                            tools:text="PBY 786" />

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ocra"
                            android:text="@string/matricula_c"
                            android:textColor="#000000" />

                        <EditText
                            android:id="@+id/editTextTextPersonName3"
                            style="@style/editar_entradas_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bordesboton"
                            android:ems="10"
                            android:fontFamily="@font/ocra"
                            android:inputType="textPersonName"
                            android:textAlignment="center"
                            tools:text="PBY 786" />

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ocra"
                            android:text="@string/anio"
                            android:textColor="#000000" />

                        <EditText
                            android:id="@+id/editTextTextPersonName2"
                            style="@style/editar_entradas_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bordesboton"
                            android:ems="10"
                            android:fontFamily="@font/ocra"
                            android:inputType="textPersonName"
                            android:textAlignment="center"
                            tools:text="PBY 786" />

                    </LinearLayout>

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="wrap_content" />

                    <ImageButton
                        android:id="@+id/imageButton"
                        android:layout_width="189dp"
                        android:layout_height="148dp"
                        android:layout_marginTop="15dp"
                        android:background="#00FFFFFF"
                        android:scaleType="centerCrop"
                        app:srcCompat="@mipmap/ic_tesla" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ocra"
                    android:text="@string/descripcion_c"
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/editTextTextPersonName8"
                    style="@style/editar_entradas_txt"
                    android:layout_width="374dp"
                    android:layout_height="77dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/bordesmarcos"
                    android:inputType="text|textImeMultiLine"
                    android:lines="3"
                    android:maxLines="5"
                    android:singleLine="false" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ocra"
                    android:text="@string/marca_c"
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/editTextTextPersonName6"
                    style="@style/editar_entradas_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="PBY 786" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ocra"
                    android:text="@string/modelo_c"
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/editTextTextPersonName7"
                    style="@style/editar_entradas_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="PBY 786" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ocra"
                    android:text="@string/color_c"
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/editTextTextPersonName9"
                    style="@style/editar_entradas_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="PBY 786" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="18dp" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/precio_titulo" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView19"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ocra"
                            android:text="@string/inicial_c"
                            android:textColor="#000000" />

                        <EditText
                            android:id="@+id/editTextTextPersonName11"
                            style="@style/editar_entradas_txt"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            tools:text="PBY 786" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView18"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ocra"
                            android:text="@string/venta_c"
                            android:textColor="#000000" />

                        <EditText
                            android:id="@+id/editTextTextPersonName10"
                            style="@style/editar_entradas_txt"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            tools:text="PBY 786" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView17"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ocra"
                            android:text="@string/promocion_c"
                            android:textColor="#000000" />

                        <EditText
                            android:id="@+id/editTextTextPersonName12"
                            style="@style/editar_entradas_txt"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            tools:text="PBY 786" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView20"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/ocra"
                        android:text="@string/color_c"
                        android:textColor="#000000"
                        android:visibility="gone" />

                    <RadioButton
                        android:id="@+id/radioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/botones"
                        android:checked="false"
                        android:clickable="false"
                        android:duplicateParentState="true"
                        android:focusable="auto"
                        android:fontFamily="@font/ocra"
                        android:text="@string/matriculado_c"
                        android:textAlignment="textStart"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="120dp"
                        android:layout_height="35dp"
                        android:background="@drawable/boton_redondeado_dark"
                        android:fontFamily="@font/valorant"
                        android:text="Deshacer"
                        android:textColor="@color/white" />

                    <Space
                        android:layout_width="30dp"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/button"
                        android:layout_width="120dp"
                        android:layout_height="35dp"
                        android:background="@drawable/boton_redondeado"
                        android:fontFamily="@font/valorant"
                        android:text="Añadir"
                        android:textColor="@color/white" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>