                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/HoraCita.title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ocra"
                    android:text="Hora"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="15dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/fecha_venta_dia_etxt"
                    android:layout_width="70dp"
                    android:layout_height="42dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/bordesboton"
                    android:ems="10"

                    android:fontFamily="@font/ocra"
                    android:inputType="number"
                    android:textColor="#CEC9D5" />

                <EditText
                    android:id="@+id/fecha_venta_mes_etxt"
                    android:layout_width="70dp"
                    android:layout_height="42dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/bordesboton"
                    android:ems="10"
                    android:fontFamily="@font/ocra"
                    android:inputType="number"
                    android:textColor="#CEC9D5" />

                <EditText
                    android:id="@+id/fecha_venta_anio_etxt"
                    android:layout_width="70dp"
                    android:layout_height="42dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/bordesboton"
                    android:ems="10"

                    android:fontFamily="@font/ocra"
                    android:inputType="number"
                    android:textColor="#CEC9D5" />

                <EditText
                    android:id="@+id/fecha_venta_hora_etxt"
                    android:layout_width="70dp"
                    android:layout_height="42dp"
                    android:background="@drawable/bordesboton"
                    android:ems="10"

                    android:fontFamily="@font/ocra"
                    android:inputType="number"
                    android:textColor="#CEC9D5" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/precio.title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ocra"
                    android:text="Precio"
                    android:textAlignment="textStart"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/precio_venta_txt"
                    style="@style/editar_entradas_txt"
                    android:layout_width="264dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bordesboton"
                    android:ems="10"
                    android:inputType="textPersonName" />

                <TextView
                    android:id="@+id/cliente.title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ocraext"
                    android:text="Cliente"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <EditText
                        android:id="@+id/cliente_venta_txt"
                        style="@style/editar_entradas_txt"
                        android:layout_width="265dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bordesboton"
                        android:ems="10"
                        android:inputType="textPersonName" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <ImageButton
                        android:id="@+id/buscar_cliente.btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bordesboton"
                        android:backgroundTint="@color/botones"
                        app:srcCompat="@drawable/icono_busqueda" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <ImageButton
                        android:id="@+id/agregar_cliente.btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bordesboton"
                        android:backgroundTint="@color/botones"
                        android:foregroundTint="#F6F2F2"
                        app:srcCompat="@drawable/icono_aniadir" />

                </LinearLayout>

                <TextView
                    android:id="@+id/vendedor.title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ocraext"
                    android:text="Vendedor"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/vendedor_venta_txt"
                        style="@style/editar_entradas_txt"
                        android:layout_width="272dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bordesboton"
                        android:ems="10"
                        android:inputType="textPersonName" />

                    <Space
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <ImageButton
                        android:id="@+id/buscar_vendedor.btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bordesboton"
                        android:backgroundTint="@color/botones"
                        android:foregroundTint="#F6F2F2"
                        app:srcCompat="@drawable/icono_busqueda" />

                </LinearLayout>

                <TextView
                    android:id="@+id/Vehiculo.title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ocraext"
                    android:text="Vehículo"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/vehiculo_venta.txt"
                        style="@style/editar_entradas_txt"
                        android:layout_width="270dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bordesboton"
                        android:ems="10"
                        android:inputType="textPersonName" />

                    <Space
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <ImageButton
                        android:id="@+id/buscar_auto.btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bordesboton"
                        android:backgroundTint="@color/botones"
                        android:foregroundTint="#F6F2F2"
                        app:srcCompat="@drawable/icono_busqueda" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/descartarVenta.btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/boton_redondeado_dark"
                    android:fontFamily="@font/valorant"
                    android:text="Descartar"
                    android:textColor="#FFFFFF" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/aniadirVenta.btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/boton_redondeado"
                    android:fontFamily="@font/valorant"
                    android:text="Añadir" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/plantilla"
        android:visibility="gone"
        tools:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
