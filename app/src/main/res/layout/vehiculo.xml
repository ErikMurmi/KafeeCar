<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/plantilla"
    android:id="@+id/vCita_lyt">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="44dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="40dp"
        android:paddingRight="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/auto_titulo_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/ocra"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="34sp"
            tools:text="CyberTruck" />

        <ImageView
            android:id="@+id/vehiculo_img"
            android:layout_width="match_parent"
            android:layout_height="194dp"
            app:srcCompat="@mipmap/ic_tesla_round" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="13dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bordesmarcos"
            android:orientation="vertical">

            <TextView
                android:id="@+id/placa_txt"
                style="@style/texto_style"
                android:fontFamily="@font/ocra"
                android:text="Placa: "
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/matricula_txt"
                style="@style/texto_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/text_space"
                android:fontFamily="@font/ocra"
                android:text="Matricula: " />

            <TextView
                android:id="@+id/vehiculo_anio_txt"
                style="@style/texto_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/text_space"
                android:fontFamily="@font/ocra"
                android:text="Año: " />

            <TextView
                android:id="@+id/vehiculo_marca_txt"
                style="@style/texto_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/text_space"
                android:fontFamily="@font/ocra"
                android:text="Marca:" />

            <TextView
                android:id="@+id/vehiculo_modelo_txt"
                style="@style/texto_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/text_space"
                android:fontFamily="@font/ocra"
                android:text="Modelo: " />

            <TextView
                android:id="@+id/vehiculo_color_txt"
                style="@style/texto_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/text_space"
                android:fontFamily="@font/ocra"
                android:text="Color: " />

            <TextView
                android:id="@+id/vehiculo_descripcion_txt"
                style="@style/texto_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/ocra"
                android:text="Descripción:" />

            <TextView
                android:id="@+id/vehiculo_pinicial_txt"
                style="@style/texto_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/text_space"
                android:fontFamily="@font/ocra"
                android:text="Precio inicial: " />

            <TextView
                android:id="@+id/vehiculo_pventa_txt"
                style="@style/texto_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ocra"
                android:text="Precio venta:" />

            <TextView
                android:id="@+id/vehiculo_promocion_txt"
                style="@style/texto_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ocra"
                android:text="Promoción: " />

            <TextView
                android:id="@+id/vehiculo_matriculado_txt"
                style="@style/texto_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ocra"
                android:text="Matriculado: " />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="13dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/eliminar_vehiculo_btn"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="@drawable/boton_redondeado_dark"
                android:fontFamily="@font/valoran"
                android:text="Anular"
                android:textColor="@color/white" />

            <Space
                android:layout_width="22dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/editar_vehiculo_btn"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/boton_redondeado"
                android:fontFamily="@font/valoran"
                android:text="editar"
                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>