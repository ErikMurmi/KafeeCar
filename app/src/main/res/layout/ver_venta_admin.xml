<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ver_vt_ad_lyt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/visualizarventa"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_space">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingLeft="35dp"
                android:paddingRight="30dp">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <ImageView
                    android:id="@+id/vt_ad_vehiculo_img"
                    android:layout_width="match_parent"
                    android:layout_height="194dp"
                    tools:srcCompat="@drawable/ic_car_dark" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="13dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bordesmarcoscafegrisaceo"
                    android:orientation="vertical">

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="6dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/textView26"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/monglos"
                        android:text="Datos de la Venta"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="19sp"
                        android:textStyle="bold" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="10dp"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:paddingLeft="5dp">

                        <TextView
                            style="@style/texto_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:fontFamily="@font/ocra"
                            android:text="Fecha de venta: "
                            android:textColor="@color/gris_visualizar"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/ver_fecha_vt_ad_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ocraext"
                            android:hint="18/8/2008"
                            android:textColor="#000000"
                            android:textSize="18.2sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:orientation="horizontal"
                        android:paddingLeft="5dp">

                        <TextView
                            style="@style/texto_style"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="0dp"
                            android:fontFamily="@font/ocra"
                            android:text="Precio venta:"
                            android:textColor="@color/gris_visualizar" />

                        <TextView
                            android:id="@+id/ver_pventa_vt_ad_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ocraext"
                            android:hint="$5,000"
                            android:textColor="#000000"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="5dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:orientation="horizontal"
                        android:paddingLeft="5dp">

                        <TextView
                            style="@style/texto_style"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="0dp"
                            android:fontFamily="@font/ocra"
                            android:text="Precio inicial: "
                            android:textColor="@color/gris_visualizar" />

                        <TextView
                            android:id="@+id/ver_pinicial_vt_ad_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ocraext"
                            android:hint="$5,000"
                            android:textColor="#000000"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="5dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:paddingLeft="5dp">

                        <TextView
                            style="@style/texto_style"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="0dp"
                            android:fontFamily="@font/ocra"
                            android:text="Vendedor: "
                            android:textColor="@color/gris_visualizar" />

                        <TextView
                            android:id="@+id/ver_vendedor_vt_ad_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ocraext"
                            android:hint="Martha Pérez"
                            android:textColor="#000000"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="5dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:paddingLeft="5dp">

                        <TextView
                            style="@style/texto_style"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="0dp"
                            android:fontFamily="@font/ocra"
                            android:text="Cliente: "
                            android:textColor="@color/gris_visualizar" />

                        <TextView
                            android:id="@+id/ver_cliente_vt_ad_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ocraext"
                            android:hint="Luis Guevara"
                            android:textColor="#000000"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:paddingLeft="5dp">

                        <TextView
                            style="@style/texto_style"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="0dp"
                            android:fontFamily="@font/ocra"
                            android:text="Contacto: "
                            android:textColor="@color/gris_visualizar" />

                        <TextView
                            android:id="@+id/ver_contacto_cliente_vt_ad_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ocraext"
                            android:hint="0999999999"
                            android:textColor="#000000"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView20"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/monglos"
                            android:text="Datos del Vehiculo"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textSize="19sp"
                            android:textStyle="bold" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:layout_weight="1" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:orientation="horizontal"
                            android:paddingLeft="5dp">

                            <TextView
                                style="@style/texto_style"
                                android:layout_marginBottom="0dp"
                                android:fontFamily="@font/ocra"
                                android:text="Placa: "
                                android:textColor="@color/gris_visualizar"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/ver_placa_vt_ad_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/ocraext"
                                android:hint="PPP-5555"
                                android:textColor="#000000"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="5dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:orientation="horizontal"
                            android:paddingLeft="5dp">

                            <TextView
                                style="@style/texto_style"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="0dp"
                                android:fontFamily="@font/ocra"
                                android:text="Matricula: "
                                android:textColor="@color/gris_visualizar" />

                            <TextView
                                android:id="@+id/ver_matricula_vt_ad_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/ocraext"
                                android:hint="38JQ91"
                                android:textColor="#000000"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="5dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:orientation="horizontal"
                            android:paddingLeft="5dp">

                            <TextView
                                style="@style/texto_style"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="0dp"
                                android:fontFamily="@font/ocra"
                                android:text="Matriculado: "
                                android:textColor="@color/gris_visualizar" />

                            <TextView
                                android:id="@+id/ver_matriculado_vt_ad_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/ocraext"
                                android:hint="Si/No"
                                android:textColor="#000000"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="5dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:orientation="horizontal"
                            android:paddingLeft="5dp">

                            <TextView
                                style="@style/texto_style"
                                android:layout_width="73dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="0dp"
                                android:fontFamily="@font/ocra"
                                android:text="Marca:"
                                android:textColor="@color/gris_visualizar" />

                            <TextView
                                android:id="@+id/ver_marca_vt_ad_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/ocraext"
                                android:hint="KIA"
                                android:textColor="#000000"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="5dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:orientation="horizontal"
                            android:paddingLeft="5dp">

                            <TextView
                                style="@style/texto_style"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="0dp"
                                android:fontFamily="@font/ocra"
                                android:text="Modelo: "
                                android:textColor="@color/gris_visualizar" />

                            <TextView
                                android:id="@+id/ver_modelo_vt_ad_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/ocraext"
                                android:hint="Picanto"
                                android:textColor="#000000"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="5dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:orientation="horizontal"
                            android:paddingLeft="5dp">

                            <TextView
                                style="@style/texto_style"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="0dp"
                                android:fontFamily="@font/ocra"
                                android:text="Año: "
                                android:textColor="@color/gris_visualizar" />

                            <TextView
                                android:id="@+id/ver_anio_vt_ad_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/ocraext"
                                android:hint="2010"
                                android:textColor="#000000"
                                android:textSize="18sp" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical"
                        android:paddingLeft="5dp">

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="6dp" />
                    </LinearLayout>

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="13dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/vt_vn_ver_venta_eliminar_btn"
                        style="@style/boton_editar"
                        android:layout_width="110dp"
                        android:layout_height="45dp"
                        android:background="@drawable/boton_redondeado_dark"
                        android:fontFamily="@font/valoran"
                        android:text="@string/eliminar_c"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/vt_vn_ver_venta_editar_btn"
                        style="@style/boton_editar"
                        android:layout_width="100dp"
                        android:layout_height="45dp"
                        android:background="@drawable/boton_redondeado"
                        android:backgroundTint="@color/botones"
                        android:fontFamily="@font/valoran"
                        android:text="editar"
                        android:textColor="@color/white"
                        android:textSize="17sp" />

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Space
                        android:layout_width="22dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>