<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/add_cita_admin_lyt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/cita_nueva_back"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="35dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="20dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/Carro.img"
                app:srcCompat="@mipmap/ic_tesla"
                android:layout_width="278dp"
                android:layout_height="166dp"
                android:layout_marginBottom="10dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/fechaCita.title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/ocra"
                        android:text="Fecha de cita"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/gris_visualizar"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/fechacitames_txt"
                            android:layout_width="70dp"
                            android:layout_height="37dp"
                            android:layout_marginEnd="12dp"
                            android:background="@drawable/bordesboton"
                            android:ems="10"

                            android:fontFamily="@font/ocra"
                            android:hint="dd"
                            android:inputType="textPersonName"
                            android:textAlignment="center"
                            android:textColor="#000000" />

                        <EditText
                            android:id="@+id/fechacitadia_txt"
                            android:layout_width="70dp"
                            android:layout_height="37dp"
                            android:layout_marginEnd="12dp"
                            android:background="@drawable/bordesboton"
                            android:ems="10"
                            android:fontFamily="@font/ocra"
                            android:hint="mm"
                            android:inputType="textPersonName"
                            android:textAlignment="center"
                            android:textColor="#000000" />

                        <EditText
                            android:id="@+id/fechacitaanio_txt"
                            android:layout_width="70dp"
                            android:layout_height="37dp"
                            android:layout_marginEnd="12dp"
                            android:background="@drawable/bordesboton"
                            android:ems="10"
                            android:fontFamily="@font/ocra"

                            android:hint="aaaa"
                            android:inputType="textPersonName"
                            android:textAlignment="center"
                            android:textColor="#000000" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/HoraCita.title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/ocra"
                        android:text="Hora"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/gris_visualizar"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/fechacitahoracita_txt"
                        android:layout_width="70dp"
                        android:layout_height="37dp"
                        android:background="@drawable/bordesboton"
                        android:ems="10"
                        android:fontFamily="@font/ocra"
                        android:hint="h"

                        android:inputType="textPersonName"
                        android:textAlignment="center"
                        android:textColor="#000000" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/Cliente.title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="@dimen/edit_txt_espacio"
                android:layout_marginBottom="@dimen/espacios"
                android:fontFamily="@font/ocra"
                android:text="Cliente "
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/gris_visualizar"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/cliente_txt"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bordesboton"
                    android:ems="10"
                    android:fontFamily="@font/ocra"

                    android:hint="@string/cedula_c"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textColor="#000000" />

                <ImageButton
                    android:id="@+id/busqueda_citas_admin_btn2"
                    app:srcCompat="@drawable/icono_busqueda"
                    android:layout_width="60dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/bordesboton"
                    android:backgroundTint="@color/botones" />

            </LinearLayout>

            <TextView
                android:id="@+id/Vendedor.title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="@dimen/edit_txt_espacio"
                android:layout_marginBottom="@dimen/espacios"
                android:fontFamily="@font/ocra"
                android:text="Vendedor"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/gris_visualizar"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/vendedor_txt"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bordesboton"

                    android:ems="10"
                    android:fontFamily="@font/ocra"
                    android:hint="@string/cedula_c"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textColor="#000000" />

                <ImageButton
                    android:id="@+id/busqueda_citas_admin_btn3"
                    app:srcCompat="@drawable/icono_busqueda"
                    android:layout_width="60dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/bordesboton"
                    android:backgroundTint="@color/botones" />

            </LinearLayout>

            <TextView
                android:id="@+id/vehiculo.title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="@dimen/edit_txt_espacio"
                android:layout_marginBottom="@dimen/espacios"
                android:fontFamily="@font/ocra"
                android:text="Vehículo"
                android:textColor="@color/gris_visualizar"
                android:textSize="18dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/vehiculo_txt"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bordesboton"
                    android:ems="10"
                    android:fontFamily="@font/ocra"

                    android:hint="@string/placa_c"
                    android:inputType="textPersonName"
                    android:textAlignment="center"
                    android:textColor="#000000" />

                <ImageButton
                    android:id="@+id/busqueda_citas_admin_btn4"
                    app:srcCompat="@drawable/icono_busqueda"
                    android:layout_width="60dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/bordesboton"
                    android:backgroundTint="@color/botones" />

            </LinearLayout>

            <TextView
                android:id="@+id/Resolucion.title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="@dimen/edit_txt_espacio"
                android:layout_marginBottom="@dimen/espacios"
                android:fontFamily="@font/ocra"
                android:text="Resolución"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/gris_visualizar"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/resolucion_txt"
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:background="@drawable/bordesmarcos"
                android:ems="10"
                android:fontFamily="@font/ocra"

                android:hint="Por ver"
                android:inputType="textMultiLine|text"
                android:textAlignment="center"
                android:textColor="#000000" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="17dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/Descartar.btn"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="50dp"
                    android:background="@drawable/bordesboton"
                    android:backgroundTint="@color/black"
                    android:fontFamily="@font/valorant"
                    android:text="Descartar"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/Guardar.btn"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bordesboton"
                    android:backgroundTint="@color/botones"
                    android:fontFamily="@font/valorant"
                    android:onClick="registarCita"
                    android:text="Guardar"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>