<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/aniadir_ci_vn_lyt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/anadircita"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="35dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="20dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/carro_ci_vn_img"
                android:layout_width="278dp"
                android:layout_height="166dp"
                android:layout_marginBottom="10dp"
                app:srcCompat="@drawable/ic_car_dark" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/fecha_ci_vn_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/ocra"
                        android:text="Fecha de cita"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/gris_visualizar"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/dia_ci_vn_etxt"
                            android:layout_width="70dp"
                            android:layout_height="37dp"
                            android:layout_marginEnd="12dp"
                            android:background="@drawable/bordesmarcoscafegrisaceo"

                            android:ems="10"
                            android:fontFamily="@font/ocra"
                            android:hint="dd"
                            android:inputType="textPersonName"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textSize="19sp" />

                        <EditText
                            android:id="@+id/mes_ci_vn_etxt"
                            android:layout_width="70dp"
                            android:layout_height="37dp"
                            android:layout_marginEnd="12dp"
                            android:background="@drawable/bordesmarcoscafegrisaceo"
                            android:ems="10"
                            android:fontFamily="@font/ocra"
                            android:hint="mm"
                            android:inputType="textPersonName"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textSize="19sp" />

                        <EditText
                            android:id="@+id/anio_ci_vn_etxt"
                            android:layout_width="80dp"
                            android:layout_height="37dp"
                            android:layout_marginEnd="12dp"
                            android:background="@drawable/bordesmarcoscafegrisaceo"
                            android:ems="10"

                            android:fontFamily="@font/ocra"
                            android:hint="aaaa"
                            android:inputType="textPersonName"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textSize="19sp" />

                    </LinearLayout>
                </LinearLayout>

                <Space
                    android:layout_width="15dp"
                    android:layout_height="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/horaCita_ci_vn_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/ocra"
                        android:text="Hora"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/gris_visualizar"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/hora_ci_vn_etxt"
                        android:layout_width="70dp"
                        android:layout_height="37dp"
                        android:background="@drawable/bordesmarcoscafegrisaceo"
                        android:ems="10"
                        android:fontFamily="@font/ocra"

                        android:hint="h"
                        android:inputType="textPersonName"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="19sp" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/cliente_ci_vn_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="@dimen/edit_txt_espacio"
                android:layout_marginBottom="@dimen/espacios"
                android:fontFamily="@font/ocra"
                android:text="Cliente "
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/gris_visualizar"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/cedula_cliente_ci_cn_etxt"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bordesmarcoscafegrisaceo"
                    android:ems="10"

                    android:fontFamily="@font/ocra"
                    android:hint="@string/cedula_c"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="19sp" />

                <ImageButton
                    android:id="@+id/buscar_cedCliente_ci_vn_btn"
                    android:layout_width="60dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/bordesmarcoscafegrisaceo"
                    android:backgroundTint="@color/cafe_grisaceo"
                    android:src="@drawable/icono_busqueda"
                    app:srcCompat="@drawable/icono_busqueda" />

            </LinearLayout>

            <TextView
                android:id="@+id/Vendedor_ci_vn_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="@dimen/edit_txt_espacio"
                android:layout_marginBottom="@dimen/espacios"
                android:fontFamily="@font/ocra"
                android:text="Vendedor"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/gris_visualizar"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/cedula_vendedor_ci_vn_etxt"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"

                    android:background="@drawable/bordesmarcoscafegrisaceo"
                    android:ems="10"
                    android:fontFamily="@font/ocra"
                    android:hint="@string/cedula_c"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="19sp" />

                <ImageButton
                    android:id="@+id/buscar_cedVendedor_ci_vn_btn"
                    android:layout_width="60dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/bordesmarcoscafegrisaceo"
                    android:backgroundTint="@color/cafe_grisaceo"
                    android:src="@drawable/icono_busqueda"
                    app:srcCompat="@drawable/icono_busqueda" />

            </LinearLayout>

            <TextView
                android:id="@+id/Vehiculo_ci_vn_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="@dimen/edit_txt_espacio"
                android:layout_marginBottom="@dimen/espacios"
                android:fontFamily="@font/ocra"
                android:text="Vehículo"
                android:textColor="@color/gris_visualizar"
                android:textSize="18dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/placa_ci_vn_etxt"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bordesmarcoscafegrisaceo"
                    android:ems="10"

                    android:fontFamily="@font/ocra"
                    android:hint="@string/placa_c"
                    android:inputType="textPersonName"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="19sp" />

                <ImageButton
                    android:id="@+id/buscar_placa_ci_vn_btn"
                    android:layout_width="60dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/bordesmarcoscafegrisaceo"
                    android:backgroundTint="@color/cafe_grisaceo"
                    android:src="@drawable/icono_busqueda"
                    app:srcCompat="@drawable/icono_busqueda" />

            </LinearLayout>

            <TextView
                android:id="@+id/resolucion_ci_vn_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="@dimen/edit_txt_espacio"
                android:layout_marginBottom="@dimen/espacios"
                android:fontFamily="@font/ocra"
                android:text="Resolución"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/gris_visualizar"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/resolucion_ci_vn_etxt"
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:background="@drawable/bordesmarcoscafegrisaceo"
                android:ems="10"

                android:fontFamily="@font/ocra"
                android:hint="Por ver"
                android:inputType="textMultiLine|text"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="18.5sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="17dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/descartar_ci_vn_btn"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="125dp"
                    android:layout_height="45dp"
                    android:background="@drawable/bordesboton"
                    android:backgroundTint="@color/black"
                    android:fontFamily="@font/valorant"
                    android:text="Descartar"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <Space
                    android:layout_width="40dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/guardar_ci_vn_btn"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="115dp"
                    android:layout_height="45dp"
                    android:background="@drawable/boton_redondeado"
                    android:backgroundTint="@color/botones"
                    android:fontFamily="@font/valorant"
                    android:onClick="registarCita"
                    android:text="Guardar"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>