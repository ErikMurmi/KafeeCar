<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@android:id/home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:theme="@style/Theme.KafeeCar">

    <FrameLayout
        android:id="@+id/frag_contenedor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/barra_nav" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/barra_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/boton_redondeado_dark"
        android:foregroundGravity="center_vertical"
        app:itemIconSize="25dp"
        app:itemIconTint="@drawable/nav_item_colors"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/barra_navegacion_admin" />
</RelativeLayout>