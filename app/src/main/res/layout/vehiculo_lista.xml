<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/vehiculo_lista_lyt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:background="@drawable/bordesmarcosnegro"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/v_lista_img2"
                tools:srcCompat="@tools:sample/avatars"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                app:srcCompat="@mipmap/ic_tesla" />

            <Space
                android:layout_width="20dp"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="193dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/v_marca_modelo_txt2"
                    tools:text="Cybertruck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="13dp"
                    android:fontFamily="@font/ocraext"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="21sp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/anio_ver_txt2"
                        android:layout_width="95dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ocraext"
                        android:text="AÃ±o:"
                        android:textColor="@color/gris_visualizar"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/v_anio_lista_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ocraext"
                        android:hint="2010"
                        android:textColor="@color/black"
                        android:textSize="17sp" />
                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="4dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/v_matricula_lista2"
                        android:layout_width="106dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ocraext"
                        android:text="Matricula:"
                        android:textColor="@color/gris_visualizar"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/v_matricula_lista_txt2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ocraext"
                        android:hint="-"
                        android:textColor="@color/black"
                        android:textSize="17sp" />
                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="4dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/ver_placa_lista_txt2"
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ocraext"
                        android:text="Placa:"
                        android:textColor="@color/gris_visualizar"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/v_placa_lista_txt2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ocraext"
                        android:textColor="@color/black"
                        android:textSize="17sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/v_precio_lista_txt2"
                    tools:text="$55 000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/ocra"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>