<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="395dp"
    android:layout_height="138dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bordesmarcosnegro"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fotoauto_Lista_cliente_pantallita_img"
            android:layout_width="173dp"
            android:layout_height="127dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="6dp"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <LinearLayout
            android:layout_width="215dp"
            android:layout_height="136dp"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/nombreauto_lista_cliente_pantallita_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/valoran"
                android:gravity="center"
                android:text="Mescedes bens "
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/precio_lista_cliente_pantallita_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/ocraext"
                android:text="$$$$"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/matricula_lista_cliente_pantallita_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/ocraext"
                android:text="Matricula: PCQ 1298"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>